{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.4"
    }
  },
  "routes": [
    { "handle": "filesystem" },             

    { "src": "/login", "dest": "/api/login.php" },
    { "src": "/logout", "dest": "/api/logout.php" },
    { "src": "/post/(.*)", "dest": "/api/post/index.php" },
    { "src": "/api/(.*\\.php)$", "dest": "/api/$1" },

    // se você manteve os CSS/ícones dentro de /api, ainda precisa dessas rotas de fallback
    { "src": "/css/(.*)", "dest": "/api/css/$1" },
    { "src": "/assets/(.*)", "dest": "/api/assets/$1" },

    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
